{
  "platform": "django",
  "app": "tiktrue-backend",
  "django": {
    "mirror": true,
    "pythonVersion": "3.11",
    "timezone": "Asia/Tehran",
    "compileMessages": false,
    "modifySettings": true,
    "geospatial": false,
    "collectStatic": true
  },
  "build": {
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput && python manage.py migrate --noinput"
  },
  "healthCheck": {
    "command": "python manage.py check --deploy"
  },
  "port": 8000,
  "environments": {
    "SECRET_KEY": "django-insecure-your-secret-key-here-change-in-production-123456789",
    "DEBUG": "False",
    "CORS_ALLOWED_ORIGINS": "https://tiktrue-frontend.liara.run,https://tiktrue.com,https://www.tiktrue.com",
    "ALLOWED_HOSTS": "api.tiktrue.com,tiktrue-backend.liara.run"
  }
}