# Frontend Environment Variables Template
# Copy this file to .env.local for local development overrides

# API Configuration (REQUIRED)
# Backend API base URL - must include /api/v1 suffix
REACT_APP_API_BASE_URL=https://api.tiktrue.com/api/v1

# Backend base URL - without /api/v1 suffix
REACT_APP_BACKEND_URL=https://api.tiktrue.com

# Frontend URL - your website domain
REACT_APP_FRONTEND_URL=https://tiktrue.com

# Build Configuration
# Disable source maps in production for security
GENERATE_SOURCEMAP=false

# Disable runtime chunk inlining for better caching
INLINE_RUNTIME_CHUNK=false

# Application Settings
# Environment identifier
REACT_APP_ENVIRONMENT=production

# Debug mode (true for development, false for production)
REACT_APP_DEBUG=false

# Optional: Analytics and Monitoring
# Enable analytics tracking
REACT_APP_ENABLE_ANALYTICS=true

# Optional: Feature Flags
# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# Optional: API Configuration
# API timeout in milliseconds
REACT_APP_API_TIMEOUT=10000

# Optional: UI Configuration
# Default theme (light/dark)
REACT_APP_DEFAULT_THEME=light

# Enable dark mode toggle
REACT_APP_ENABLE_DARK_MODE=true

# Environment-Specific Examples:

# For Local Development:
# REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
# REACT_APP_BACKEND_URL=http://localhost:8000
# REACT_APP_FRONTEND_URL=http://localhost:3000
# GENERATE_SOURCEMAP=true
# REACT_APP_DEBUG=true

# For Staging:
# REACT_APP_API_BASE_URL=https://staging-api.tiktrue.com/api/v1
# REACT_APP_BACKEND_URL=https://staging-api.tiktrue.com
# REACT_APP_FRONTEND_URL=https://staging.tiktrue.com
# REACT_APP_ENVIRONMENT=staging

# For Production:
# REACT_APP_API_BASE_URL=https://api.tiktrue.com/api/v1
# REACT_APP_BACKEND_URL=https://api.tiktrue.com
# REACT_APP_FRONTEND_URL=https://tiktrue.com
# REACT_APP_ENVIRONMENT=production

# IMPORTANT NOTES:
# 1. All custom environment variables must start with REACT_APP_
# 2. Environment variables are embedded at build time, not runtime
# 3. Never put sensitive data in React environment variables (they're public)
# 4. Restart development server after changing environment variables
# 5. Different .env files are loaded based on NODE_ENV and file priority